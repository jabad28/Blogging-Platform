<div class="row" id="edit-post">
  <div class="medium-4 cloumn">
    <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder:"Title" %> <br>
    <%= f.label :body %>
    <%= f.text_area :body, size: "60x12" %> <br>
    <%= f.label :photo_url %>
    <%= f.text_area :photo_url, placeholder:"Image Url" %> <br>
    <%= f.submit "Save Changes", class: "btn-primary"%>
    <% end %>
    <%= button_to "Delete Post", post_path, :method => :delete, class: "button delete-button", data: { confirm: "Are you sure you want to delete this post?"} %>
  </div>
</div>
