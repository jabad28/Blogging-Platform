

<div class="row bump">
  <div class="small-12 large-6 columns">
    <div class="row">
      <div class="blog-post">
        <div class="row">
          <% if @post %>
            <% post = @post %>
          <div class="small-12 large-8 columns">
              <h6>User: <strong><%= link_to current_user.first_name, user_path(current_user)%></h6>
              <p><%= link_to post.title, post_path(post) %></p>
              <p><%= post.body %></p>
              <img src="<%=post.photo_url%>" alt="" />

              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="small-12 large-6 columns">
            <% if current_user == @post.user %>
            <%= link_to "Edit", edit_post_path(@post), method: :get, class: "link"%>
            <%= link_to "Delete",  destroy_post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "link"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
