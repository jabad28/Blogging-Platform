

<div class="logo">
  <%= image_tag "abadgirl.png", class:"logo-image" %>
</div>


<div class="row">
  <div class="large-12 columns ">
    <h1 class="beauty-post-title"> All About Beauty!</h1>
  </div>
</div>

<div class="blog-post">
<% if current_user != @user %>
  <% @posts.order(created_at: :desc).each do |post| %>


<div class="row results">
  <div id="index-beauty-page" class="large-12 columns ">
    <div class="search-results">
      <div class="row ">
        <div class="large-2 columns">
          <a><img src="<%=post.photo_url%>"  class=" thumbnail"></a>
        </div>
        <div class="large-10 columns">
          <div class="row">
            <div class=" large-9 columns">
              <h5><a <%= link_to post.title, post %> </a></h5>
              <p><%= truncate(post.body, length: 100) %></p>
            </div>
            <div class="row">
              <div class=" large-12 columns">
                <ul class="large-block-grid-2">
                  <li>
                    <ul>
                      <li><strong>Created By: </strong><%= link_to current_user.first_name, user_path(current_user)%></li>

                    </ul>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

          </div>


  </div>
</div>
</div>

<% end %>
<% end %>
    <!-- <a href="#" class="button right"> show more results &raquo;</a> -->
</div>

