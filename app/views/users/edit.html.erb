<div class="row" id="edit-user-profile">
  <div class="medium-4 cloumn">
    <%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, placeholder:"First Name" %> <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder:"Last Name" %> <br>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder:"Email" %> <br>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder:"Password" %> <br>
    <%= f.submit "Save Changes", class: "btn-primary"%>
    <% end %>
    <%= button_to "Delete Profile", users_path, :method => :delete, class: "button delete-button", data: { confirm: "Are you sure? There is no coming back!"} %>
  </div>
</div>
