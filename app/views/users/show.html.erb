          <div class="large-3 small-12 columns expand">
            <%= link_to "Create Beauty Blog", new_beauty_path(@post), method: :get, class: "link"%>

            <br>
            <%= link_to "Create Fashion Blog", new_fashion_path(@post), method: :get, class: "link"%>

          </div>
        </div>
      </form>
    </div>
  </div>
</section>

