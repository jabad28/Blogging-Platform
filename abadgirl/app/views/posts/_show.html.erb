
<div class="row bump">
  <div class="small-12 large-6 columns">
    <div class="row">
      <div class="blog-post">
        <div class="row">
          <% if @post %>
            <% post = @post %>
          <div class="small-12 large-8 columns">
            <h6>User: <strong><%= link_to post.user.first_name, user_path(post.user)%></h6>
            <p><%= link_to post.body, post_path(post.user) %></p>
          </div>
          <% end %>
        </div>
        <div class="row">
          <div class="small-12 large-6 columns">
            <% if post.user == current_user %>
            <%= link_to "Edit", edit_post_path(@post), method: :get, class: "link"%>
            <%= link_to "Delete",  destroy_post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "link"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
