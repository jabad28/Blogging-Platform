<!-- Sign Up -->

<div class="row">
   <div class="large-6 columns">
     <div class="signup-panel">
       <p class="welcome"> Welcome to AbadGirl!</p>
        <%= form_for @user do |f| %>
          <div class="row collapse">
           <div class="small-10  columns">
            <%= f.text_field :first_name, placeholder:"First Name" %><br>
           </div>
          </div>
          <div class="row collapse">
           <div class="small-10  columns">
            <%= f.text_field :last_name, placeholder:"Last Name" %><br>
           </div>
          </div>
          <div class="row collapse">
           <div class="small-10  columns">
            <%= f.text_field :email, placeholder:"Email" %><br>
           </div>
          </div>
         <div class="row collapse">
           <div class="small-10 columns ">
            <%= f.password_field :password, placeholder:"Password" %><br>
           </div>
           <div>
            <%= f.text_field :photo, placeholder: "Picture URL" ,class: "new-user form-control"%>
          </div>
         </div>
      </div>
        <%= f.submit "Create Account", class:"button radius create-account-button"%>
        <p> Already have an account? <%= link_to "Sign in", login_path %></p>
        <div class="renderProfilePicture">
        <div class="renderPicture">
          <img class="samplePic" src="https://lh3.googleusercontent.com/-NIp5BzqFqNE/AAAAAAAAAAI/AAAAAAAAAAA/CapeXh7GWeI/photo.jpg" alt="" />
        </div>
        <p class="samplePicText"> Preview</p>
        <% end %>
      </div>
     </div>
   </div>
  </div>
